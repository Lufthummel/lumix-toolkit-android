<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="org.secretwpn.lumixtoolkit.StreamDisplayActivity">


    <org.secretwpn.lumixtoolkit.ui.StreamDisplay
        android:id="@+id/stream_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:onClick="displayClicked"
        android:scaleType="fitXY" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10pt"
        android:clickable="true"
        android:onClick="recordClicked"
        android:tint="@android:color/white"
        app:backgroundTint="@android:color/holo_red_dark"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_fiber_manual_record_black_24dp" />


</RelativeLayout>
